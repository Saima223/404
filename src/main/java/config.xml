<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Student bean using constructor injection -->
    <bean id="student1" class="com.springcore.Student">
        <constructor-arg value="101" />
        <constructor-arg value="John Doe" />
        <constructor-arg value="123 Main Street" />
    </bean>

    <!-- Student bean using setter injection -->
    <bean id="student2" class="com.springcore.Student">
        <property name="studentId" value="102" />
        <property name="studentName" value="Jane Smith" />
        <property name="studentAddress" value="456 Oak Avenue" />
    </bean>

</beans>